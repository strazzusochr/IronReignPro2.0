<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/dark_bg">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp">

        <!-- Button to start the AR coach activity -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnArCoach"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="@string/menu_ar_coach"
            android:textAllCaps="false"
            android:textColor="@color/dark_bg"
            app:backgroundTint="@color/neon_blue"
            app:iconTint="@color/dark_bg" />

        <!-- Button to navigate to the weekly training plan -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnTrainingsplan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="@string/menu_trainingsplan"
            android:textAllCaps="false"
            android:textColor="@color/dark_bg"
            app:backgroundTint="@color/neon_blue"
            app:iconTint="@color/dark_bg" />

        <!-- Button to navigate to the progress chart -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnProgress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="@string/menu_progress"
            android:textAllCaps="false"
            android:textColor="@color/dark_bg"
            app:backgroundTint="@color/neon_blue"
            app:iconTint="@color/dark_bg" />

        <!-- Button to navigate to the nutrition section -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnNutrition"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="@string/menu_nutrition"
            android:textAllCaps="false"
            android:textColor="@color/dark_bg"
            app:backgroundTint="@color/neon_blue"
            app:iconTint="@color/dark_bg" />

        <!-- Button to navigate to the settings section -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnSettings"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="@string/menu_settings"
            android:textAllCaps="false"
            android:textColor="@color/dark_bg"
            app:backgroundTint="@color/neon_blue"
            app:iconTint="@color/dark_bg" />
    </LinearLayout>

</ScrollView>
