<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Application theme based on Material Components without an action bar. -->
    <style name="Theme.IronReign" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Use the Orbitron font for a futuristic look -->
        <item name="android:fontFamily">@font/orbitron_regular</item>
        <!-- Dark background to emphasise neon colours -->
        <item name="android:colorBackground">@color/dark_bg</item>
        <!-- Default text colour -->
        <item name="android:textColor">@color/neon_blue</item>
        <!-- Primary and secondary colours used by Material components -->
        <item name="colorPrimary">@color/neon_blue</item>
        <item name="colorPrimaryVariant">@color/neon_purple</item>
        <item name="colorSecondary">@color/neon_purple</item>
    </style>
</resources>
