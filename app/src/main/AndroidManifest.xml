<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Request camera access for AR and pose detection -->
    <uses-permission android:name="android.permission.CAMERA" />
    <!-- Require an ARâ€‘capable camera on the device -->
    <uses-feature android:name="android.hardware.camera.ar" android:required="true" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.IronReign">

        <!-- Activity that shows the live AR coach view -->
        <activity android:name=".ARCoachActivity" />

        <!-- The main entry point into the app which hosts the navigation fragments -->
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>
